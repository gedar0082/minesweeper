<resources>
    <declare-styleable name="AppTheme">
        <attr name="colorPrimary" format="color"/>
        <attr name="colorPrimaryDark" format="color"/>
        <attr name="colorAccent" format="color"/>
        <attr name="colorBackground" format="color"/>
        <attr name="colorItemBackground" format="color"/>
        <attr name="colorText" format="color"/>
    </declare-styleable>

    <!-- Light base activity theme -->
    <style name="ActivityThemeLight" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackground">@color/colorBackground</item>
        <item name="colorItemBackground">@color/colorItemBackground</item>
        <item name="colorText">@color/colorText</item>
    </style>
    <!-- Dark base activity theme -->
    <style name="ActivityThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDarkMode</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDarkMode</item>
        <item name="colorAccent">@color/colorAccentDarkMode</item>
        <item name="colorBackground">@color/colorBackgroundDarkMode</item>
        <item name="colorItemBackground">@color/colorItemBackgroundDarkMode</item>
        <item name="colorText">@color/colorTextDarkMode</item>
    </style>
</resources>
